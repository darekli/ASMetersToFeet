<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="80dp"
        android:layout_marginRight="80dp"
        android:background="#D70019"
        android:onClick="getMetersToFeet"
        android:padding="20dp"
        android:text="Convert"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cms" />

    <EditText
        android:id="@+id/cms"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:ems="10"

        android:hint="centimeters"
        android:inputType="number"
        android:maxLength="2"
        app:layout_constraintStart_toEndOf="@+id/meters"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageHeight"
        android:layout_width="381dp"
        android:layout_height="284dp"
        android:layout_marginStart="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cms"
        app:layout_constraintVertical_bias="0.413"
        app:srcCompat="@drawable/signrestictionreightempty" />

    <TextView
        android:id="@+id/textViewInSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13'-11''"
        android:textColor="#000000"
        android:textSize="66sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageHeight"
        app:layout_constraintEnd_toStartOf="@+id/imageHeight"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageHeight"
        app:layout_constraintTop_toBottomOf="@+id/imageHeight" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="137dp"
        android:layout_height="27dp"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginBottom="87dp"
        android:text="change"
        android:textOff="feet to meters"
        android:textOn="meters to feet"
        app:layout_constraintBottom_toTopOf="@+id/imageHeight"
        app:layout_constraintStart_toStartOf="parent" />

    <SeekBar
        android:id="@+id/meters"
        android:layout_width="135dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>